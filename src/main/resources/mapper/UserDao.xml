<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.webbleen.dao.UserDao">

    <select id="getById" resultType="com.webbleen.entity.User">
        select *
        from webblog.w_user u
        where u.id = #{id}
    </select>

    <select id="findByUsernameAndPassword" resultType="com.webbleen.entity.User">
        select *
        from webblog.w_user u
        where u.username = #{username} and u.password = #{password}
    </select>

</mapper>